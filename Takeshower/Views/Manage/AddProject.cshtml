                'triggerId': ['dateBtn2'],
                'alignId': 'datesWrap2',
                'format': '-',//时间格式 默认'YYYY-MM-DD HH:MM:SS'
                'min': '2014-09-20 10:00:00',//最大时间
                'max': '2014-10-30 10:00:00'//最小时间
            },
            opts3 = {
                'targetId': 'startTime',//时间写入对象的id
                'min': '1900-01-01 10:00:00',//最大时间
